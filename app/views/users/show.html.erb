<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>投稿内容</h2>
      <table>
        <colgroup>
            <col style="width: 20%;">
            <col style="width: 30%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
          </colgroup>
        <thead>
          <tr>
            <th class="title">題名</th>
            <th class="body">本文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
       <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body.truncate(20) %></td>
          <td><%= link_to '詳細', post_path(post.id) %></td>
          <% if @user == current_user %><br />
          　<td><%= link_to '編集', edit_post_path(post.id) %></td>
          　<td><%= link_to '削除', post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>
</div>