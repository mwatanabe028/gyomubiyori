
      <h1>投稿編集</h1>
      <%= form_with model: @post, mothod: :patch do |f| %>
        <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div>
          <%= f.label :body %>
          <%= f.text_area :body %>
        </div>
        <div>
          <%= f.submit "更新" %>
        </div>
      <% end %>

      <%= link_to "確認", posts_path(@post) %>
      |
      <%= link_to "戻る", posts_path %>