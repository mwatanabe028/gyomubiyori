<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>投稿フォーム</h1>
      <%= form_with model: @post do |f| %>
	    <div>
		    <%= f.label :タイトル %><br>
		    <%= f.text_field :title, autofocus: true %>
	    </div>
	  <div>
	   	<%= f.label :本文 %><br>
		  <%= f.text_area :body ,  class: 'form-control',size: "20x10"%>
	  </div>
	  <div><%= f.submit "投稿" %></div>

<% end %>
