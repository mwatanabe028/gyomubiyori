  <body>
    <div class="container">
     <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
       <header>
        <h2>投稿詳細</h2>
      </header>
         <table>
           <colgroup>
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 30%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
            <col style="width: 20%;">
          </colgroup>
         <thead>
          <tr>
            <th class="user_id">氏名</th>
            <th class="title">題名</th>
            <th class="body">本文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
       <tbody>
       <tbody>
        <tr>
         <td>
           <%= link_to user_path(@user) do %>
             <%= @user.name %>
           <% end %>
        </td>
        <td>
            <%= @post.title %>
        </td>
        <td>
          <%= @post.body.truncate(20) %>
        </td>
      </tr>
      <% if @user == current_user %>
          <td>
            <%= link_to "編集", edit_post_path(@post)%>
            |
            <%= link_to "削除", post_path(@post), method: :delete %>
          </td>
      <% end %>
    </tbody>
  </table>
  </div>
  </div>
 </div>
</body>